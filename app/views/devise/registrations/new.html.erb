<% content_for :title do %>
Register
<% end %>

<div class="row">
  <div class="span8" style="padding:19px 0px 19px 19px">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal well"}) do |f| %>
      <%= devise_error_messages! %>
        <fieldset>
          <legend style="font-size: 38px">Register Now! Simple &amp It is Free!</legend>   
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :user_name %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <div class="pull-right"><%= f.button :submit, "Sign Up" %></div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.input :remember_me, as: :boolean %></div>
          <% end %>

          <legend></legend>
          
            <%= render "devise/shared/links" %>

        </fieldset>
    <% end %>
  </div>
</div>