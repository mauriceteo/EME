<% content_for :title do %>
Edit User
<% end %>

<div id="content" class="clrfix">
  <section id="hero3">
<div class="row">
  <div class="span1"></div>
  <div class ="span8">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "form-horizontal well", :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  

  <fieldset>
    <legend style="font-size: 38px">Edit <%= resource_name.to_s.humanize %></legend>   
    <div><%= f.input :email %><br /></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.input :password %><br /></div>

  <div><%= f.input :password_confirmation %><br /></div>

  <div><%= f.input :current_password %><br /></div>
  
 <div class="pull-right"><%= f.button :submit, "Update" %></div>

 
  </fieldset>
  <% end %>

  

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel My Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
</div>
</div>
</section>
</div>