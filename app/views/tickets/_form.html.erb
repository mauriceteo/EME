<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :ticket_name %>

    <%= f.input :ticket_price %>

    <%= f.input :ticket_quantity %>

    <%= f.input :due_date %>

    <%= f.input :ticket_validation %>

    <%= f.association :event %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
